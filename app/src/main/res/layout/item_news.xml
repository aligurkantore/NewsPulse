<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/image_news"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@color/cardview_dark_background"
        app:layout_constraintEnd_toStartOf="@id/name_author"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/name_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        tools:text="Ali Gürkan Töre"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/image_news"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        tools:text="Yolun karşısına geçerken dereye düşen adam boğuldu."
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/image_news"
        app:layout_constraintTop_toBottomOf="@id/name_author"/>

</androidx.constraintlayout.widget.ConstraintLayout>